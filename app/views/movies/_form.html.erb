<%= form_for @movie, class: 'form-control' do |f| %>
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, 'error') %> prevented this movie from being submitted:
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label 'title' %>
    <%= f.text_field 'title', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'release_date' %>
    <%= f.date_field 'release_date', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'director' %>
    <%= f.text_field 'director', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'runtime_in_minutes' %>
    <%= f.number_field 'runtime_in_minutes', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'Poster Image' %>
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.label 'description' %>
    <%= f.text_area 'description', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit" %>
  </div>
<% end %>