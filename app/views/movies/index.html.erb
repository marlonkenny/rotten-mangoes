<%= form_tag movies_path, method: :get, class: 'form-inline' do %>
  <%= label_tag 'Filters' %>
  <div class="form-group">
    <%= text_field_tag 'search[query]', '', placeholder: 'Title/Director', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag 'Between' %>
    <%= number_field 'search', 'duration_a', class: 'duration form-control' %>
    <%= label_tag 'and' %>
    <%= number_field 'search', 'duration_b', class: 'duration form-control' %>
    <%= label_tag 'minutes' %>
  </div>
  |
  <div class="form-group">
    <%= label_tag 'Sort By:' %>
    <%= select_tag 'order_by',
      options_for_select([['Title', 'title'],['Release Date', 'release_date'],['Length', 'runtime_in_minutes']]), { class: 'form-control' }  %>
  </div>
  <%= submit_tag "Update", name: nil, class: 'btn btn-default' %>
<% end %>

