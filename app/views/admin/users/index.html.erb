<h2>All Users:</h2>
<%= link_to 'Back to movies', root_path %><br/>
<%= link_to 'Create a new user', new_admin_user_path %><br/>
<table>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Admin</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    <%= paginate @users %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.admin %>
            Yes
          <% else %>
            No
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>